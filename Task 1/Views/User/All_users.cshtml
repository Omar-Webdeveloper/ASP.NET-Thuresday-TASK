@model IEnumerable<Task_1.Models.User>

<h1>All Users</h1>

<table class="table">
    <thead>
        <tr>
            
            <th>Name</th>
            <th>Email</th>
            <th>Edit</th>
            <!-- Add other columns as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
             
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td><a asp-action="Edit" asp-route-id="@user.Id">Edit</a></td>
                <td><a asp-action="Details" asp-route-id="@user.Id">Details</a></td>
                <td><a href="javascript:deleteUser('@user.Id')">Delete</a></td>
                <!-- Add other columns as needed -->
            </tr>
        }
    </tbody>
</table>
<a asp-controller="User" asp-action="Create">Create New User</a>

<form id="deleteForm" method="post" asp-controller="User" asp-action="Delete">
    <input type="text" id="userIdToDelete" name="id" value="" />
</form>

<script>
    function deleteUser(userId) {
        if (confirm("Are you sure you want to delete this user?")) {
            document.getElementById('userIdToDelete').value = userId;
            document.getElementById('deleteForm').submit();
        }
		else {
			alert("User not deleted");
		}
    }
</script>