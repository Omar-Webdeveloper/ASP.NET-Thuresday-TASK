@model today_topics.Models.User
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<form asp-action="Register" method="post">
    @Html.AntiForgeryToken()
    <label asp-for="Name">Username:</label><br>
    <input type="text" asp-for="Name" /><br>
    <label asp-for="Email">Email:</label><br>
    <input type="text" asp-for="Email" /><br>
    <label asp-for="Password">Password:</label><br>
    <input type="password" asp-for="Password" /><br>
    <label>Repeat Password:</label><br>
    <input type="password" name="repeatPassword" /><br>
    <button type="submit">Register</button>
</form>
