@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@{
    var items = new[] {
        new { Name = "Omar", Age = 18,Email="Omar@gmail.com" },
        new { Name = "Khaild", Age = 20, Email="Khaild@gmail.com"},
        new { Name = "Anas", Age = 30 ,Email="Anas@gmail.com"}
    };
}


<div class="table-container">
    <h2>Dynamic Table</h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Email</td>
                </tr>
            }
        </tbody>
    </table>
</div>